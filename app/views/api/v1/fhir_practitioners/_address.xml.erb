  <line value="<%= address.first_line.to_s+ (address.second_line.to_s.blank? ?  "": ", ") + address.second_line.to_s %>"/>
  <city value="<%= address.city %>"/>
  <state value="<%= address.state %>"/>
  <zip value="<%= address.postal_code %>"/>
  <country value="<%= address.country_code %>"/>
</address>